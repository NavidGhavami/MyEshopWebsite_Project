@page
@using ShopManagement.Configuration.Permissions
@model ServiceHost.Areas.Administration.Pages.Shop.Products.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت  محصولات";
}

<div class="content">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["Title"]</h4>
            <p class="pull-left">
                <a permission="@ShopPermission.CreateProducts" class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد محصول جدید</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">جستجو در محصولات</h3>
                </div>
                <div class="panel-body">
                    <form class="form-inline" role="form" method="get">
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.Name"></label>
                            <input class="form-control" asp-for="SearchModel.Name" placeholder="نام محصول">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.Code"></label>
                            <input class="form-control" asp-for="SearchModel.Code" placeholder="کد محصول">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.Seller"></label>
                            <input class="form-control" asp-for="SearchModel.Seller" placeholder="نام فروشنده">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" asp-for="SearchModel.CategoryId"></label>
                            <select class="form-control" asp-for="SearchModel.CategoryId" asp-items="Model.ProductCategory">
                                <option value="0">
                                    گروه محصول را انتخاب کنید ...
                                </option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="ProductCategoriesDiv">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست محصولات : (@Model.Product.Count)</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-hover table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عکس</th>
                                        <th>نام</th>
                                        <th>کد</th>
                                        <th>نام فروشنده</th>
                                        <th>گروه محصول</th>
                                        <th>تاریخ تولید</th>
                                        <th>بهترین پیشنهاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Product)
                                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/Pictures/@item.PrimaryPicture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@item.Seller</td>
                                        <td>@item.Category</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.BestChoice == false)
                                            {
                                                <i class="fa fa-remove fa-3x text-danger"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-check fa-3x text-success"></i>
                                            }
                                        </td>
                                        <td>
                                            <a permission="@ShopPermission.EditProducts" class="btn btn-warning btn-rounded waves-effect waves-light text-dark m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if (item.BestChoice == true)
                                            {
                                                <a class="btn btn-danger btn-rounded waves-effect waves-light m-b-5" asp-page="./Index" asp-page-handler="IsNotBestChoice" asp-route-id="@item.Id">
                                                    عدم اعمال پیشنهاد ویژه
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success btn-rounded waves-effect waves-light m-b-5" asp-page="./Index" asp-page-handler="IsBestChoice" asp-route-id="@item.Id">
                                                    اعمال پیشنهاد ویژه
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>

}
