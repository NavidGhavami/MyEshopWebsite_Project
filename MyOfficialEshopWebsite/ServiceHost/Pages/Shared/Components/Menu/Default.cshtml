@using _0_Framework.Application
@using _0_Framework.Infrastructure
@model _01_Query.MenuModel
@inject IAuthHelper AuthHelper


<div class="off_canvars_overlay"></div>
<div class="Offcanvas_menu">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="canvas_open">
                    <a href="javascript:void(0)"><i class="ion-navicon"></i></a>
                </div>
                <div class="Offcanvas_menu_wrapper">
                    <div class="canvas_close">
                        <a href="javascript:void(0)"><i class="ion-android-close"></i></a>
                    </div>
                    <div class="antomi_message">
                        <p>ارسال رایگان برای خریدهای بیش از 500 هزار تومان - ضمانت بازگشت کالا تا 7 روز</p>
                    </div>
                    <div class="header_top_settings text-right">
                        <ul>
                            <li><a href="https://tracking.post.ir/">پیگیری سفارش</a></li>
                            <li>تلفن تماس: <a class="ltr-text" href="tel:+(+98)9337878585">(+98) 933 787 8585 </a></li>
                            <li>ضمانت کیفیت محصولات</li>
                            @if (AuthHelper.IsAuthenticated())
                            {
                                <li>@AuthHelper.CurrentAccountInfo().FullName عزیز، خوش آمدید!</li>

                            }
                        </ul>
                    </div>
                    <div class="header_configure_area">
                        <div class="header_wishlist">
                            <a asp-page="/Wishlist">
                                <i class="ion-android-favorite-outline"></i>
                                <span class="wishlist_count" id="">0</span>
                            </a>
                        </div>
                        <div class="mini_cart_wrapper">
                            <a href="javascript:void(0)">
                                <i class="fa fa-shopping-bag"></i>
                                <span class="cart_price"><i class="ion-ios-arrow-down"></i></span>
                                <span class="cart_count" id="cart_items_count_mobile">0</span>
                            </a>
                            <!--mini cart-->
                            <div class="mini_cart">
                                <div class="mini_cart_inner" id="mini_cart_inner_mobile">
                                    
                                </div>
                                <br />
                                <div class="mini_cart_footer">
                                    <div class="cart_button">
                                        <a asp-page="/ShoppingCart">مشاهده سبد خرید</a>
                                    </div>

                                </div>
                            </div>
                            <!--mini cart end-->
                        </div>
                    </div>
                    <div class="search_container">
                        <form method="get" asp-page="/Search">
                            <div class="hover_category">
                                <select class="select_option" name="select" id="categori1">
                                    <option selected value="1">همه دسته ها</option>
                                    @foreach (var item in Model.ProductCategories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="search_box">
                                <input placeholder="جستجوی محصول ..." name="value" id="value" type="text">
                                <button type="submit">جستجو</button>
                            </div>
                        </form>
                    </div>
                    <div id="menu" class="text-left ">
                        <ul class="offcanvas_main_menu">
                            <li class="menu-item-has-children active">
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a href="#">محصولات</a>
                                <ul class="sub-menu">
                                    @foreach (var item in Model.ProductCategories)
                                    {
                                        <li><a asp-page="/ProductCategory" asp-route-id="@item.Slug">@item.Name</a></li>
                                    }
                                </ul>

                            </li>
                            <li class="menu-item-has-children">
                                <a href="#">مقالات</a>
                                <ul class="sub-menu">
                                    @foreach (var item in Model.ArticleCategories)
                                    {
                                        <li><a asp-page="/ArticleCategory" asp-route-id="@item.Slug">@item.Name</a></li>
                                    }
                                </ul>
                            </li>
                            <li class="menu-item-has-children">
                                <a asp-page="/AboutUs">درباره ما</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a asp-page="/ContactUs"> تماس با ما</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a asp-page="/FrequentQuestion">سوالات متداول</a>
                            </li>
                            @if (AuthHelper.IsAuthenticated())
                            {
                                <li class="menu-item-has-children">
                                    <a asp-page="/UserDashboard">پروفایل من</a>
                                    <a asp-page="/Account" asp-page-handler="Logout">خروج</a>
                                </li>
                            }
                            else
                            {
                                <li class="menu-item-has-children">
                                    <a asp-page="/Account">ورود | ثبت نام</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="Offcanvas_footer">
                        <span><a href="#"><i class="fa fa-envelope-o"></i>navid_ghavami@outlook.com</a></span>
                        <ul>
                            <li class="facebook"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="twitter"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="pinterest"><a href="#"><i class="fa fa-pinterest"></i></a></li>
                            <li class="google-plus"><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li class="linkedin"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
