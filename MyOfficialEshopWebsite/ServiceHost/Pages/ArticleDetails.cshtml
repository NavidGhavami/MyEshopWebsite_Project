@page "{id}"
@model ServiceHost.Pages.ArticleDetailsModel
@{
    ViewData["Title"] = "جزییات مقاله";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a asp-page="/Index">صفحه اصلی</a></li>
                        <li>@Model.Article.Title</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog_bg_area">
    <div class="container">
        <div class="blog_page_section">
            <div class="row">
                <div class="col-lg-9 col-md-12">
                    <!--blog grid area start-->
                    <div class="blog_wrapper blog_details">
                        <article class="single_blog">
                            <figure>
                                <div class="post_header">
                                    <h2 class="post_title">@Model.Article.Title</h2>
                                    <div class="blog_meta">
                                        <span class="author">ارسال توسط : <a href="#">مدیر سایت</a> / </span>
                                        <span class="meta_date">در تاریخ : <a href="#">@Model.Article.PublishDate</a> /</span>
                                        <span class="post_category">گروه مقاله : <a href="#">@Model.Article.CategoryName</a></span>
                                    </div>
                                </div>
                                <div class="blog_thumb">
                                    <img src="~/Pictures/@Model.Article.Picture" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                                </div>
                                <figcaption class="blog_content">
                                    <div class="post_content">
                                        <p>@Html.Raw(Model.Article.Description)</p>
                                    </div>
                                    <div class="entry_content">
                                        <div class="post_meta">
                                            <span>کلمات کلیدی: </span>
                                            @foreach (var tag in Model.Article.KeywordList)
                                            {
                                                <span><a asp-page="/Search" asp-route-value="@tag">@tag , </a></span>
                                            }

                                        </div>

                                        <div class="social_sharing">
                                            <p>اشتراک گذاری این مطلب:</p>
                                            <ul>
                                                <li><a href="#" title="facebook"><i class="fa fa-facebook"></i></a></li>
                                                <li><a href="#" title="twitter"><i class="fa fa-twitter"></i></a></li>
                                                <li><a href="#" title="pinterest"><i class="fa fa-pinterest"></i></a></li>
                                                <li><a href="#" title="instagram"><i class="fa fa-instagram"></i></a></li>
                                                <li><a href="#" title="google+"><i class="fa fa-google-plus"></i></a></li>
                                                <li><a href="#" title="linkedin"><i class="fa fa-linkedin"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </figcaption>
                            </figure>
                        </article>
                        <div class="related_posts">
                            <h3>آخرین مقالات سایت</h3>
                            <div class="row">
                                @foreach (var item in Model.LatestArticle)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <article class="single_related">
                                            <figure>
                                                <div class="related_thumb">
                                                    <img src="~/Pictures/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle">
                                                </div>
                                                <figcaption class="related_content">
                                                    <h4><a asp-page="/ArticleDetails" asp-route-id="@item.Slug">@item.Title</a></h4>
                                                    <div class="blog_meta">
                                                        <span class="author">توسط: <a href="#">مدیر وب سایت</a> / </span>
                                                        <span class="meta_date">تاریخ انتشار: @item.PublishDate</span>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="comments_box">
                            <h3>@Model.Article.Comments.Count دیدگاه </h3>
                            @foreach (var comment in Model.Article.Comments)
                            {
                                <div class="comment_list" id="comment-@comment.Id">
                                    <div class="comment_thumb">
                                        <img src="~/SiteTheme/assets/img/blog/comment3.png.jpg" alt="@comment.Message" title="@comment.Message">
                                    </div>
                                    <div class="comment_content">
                                        <div class="comment_meta">
                                            <h4><a href="#">@comment.Name</a></h4>
                                            @if (comment.ParentId > 0)
                                            {
                                                <h5><a href="#comment-@comment.ParentId">در پاسخ به : @comment.ParentName</a></h5>
                                            }
                                                <span>ارسال شده در تاریخ: @comment.CreationDate</span>
                                        </div>
                                        <p>@Html.Raw(comment.Message)</p>
                                        <div class="comment_reply">
                                            <a href="#postComment" onclick='$("#commentParentId").val(@comment.Id)'>پاسخ</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="comments_form" id="postComment">
                            <h3>با دادن نظر ارزشمندتان ما را در رسیدن بیشتر به ارائه با کیفیت تر مقالات یاری نمایید</h3>
                            <p>ایمیل شما منتشر نخواهد شد. فیلد های الزامی با * مشخص شده اند</p>
                            <form method="post">
                                <div class="row">
                                    <div class="col-12">
                                        <label for="review_comment">دیدگاه </label>
                                        <textarea name="message" id="message" required=""></textarea>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="name">نام</label>
                                        <input name="name" id="name" type="text" required="">

                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="email">ایمیل </label>
                                        <input name="email" id="email" type="text" dir="ltr" required="">
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <label for="website">وب‌سایت </label>
                                        <input name="website" id="website" type="text">
                                    </div>
                                </div>
                                <input name="ownerRecordId" value="@Model.Article.Id" type="hidden">
                                <input name="articleSlug" value="@Model.Article.Slug" type="hidden">
                                <input name="parentId" id="commentParentId" value="" type="hidden">
                                <button class="button" type="submit">ارسال دیدگاه</button>
                            </form>
                        </div>

                    </div>
                    <!--blog grid area start-->
                </div>
                <div class="col-lg-3 col-md-12">
                    <div class="blog_sidebar_widget">
                        <div class="widget_list widget_search">
                            <div class="widget_title">
                                <h3>جستجو</h3>
                            </div>
                            <form method="get" asp-page="/Search">
                                <input name="value" id="value" placeholder="جستجو ..." type="text">
                                <button type="submit">جستجو</button>
                            </form>
                        </div>
                        <div class="widget_list widget_post">
                            <div class="widget_title">
                                <h3>مطالب اخیر</h3>
                            </div>
                            @foreach (var item in Model.LatestArticle)
                            {
                                <div class="post_wrapper">
                                    <div class="post_thumb">
                                        <a asp-page="/ArticleDeatails"><img src="~/Pictures/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle"></a>
                                    </div>
                                    <div class="post_info">
                                        <h4><a asp-page="/ArticleDetails" asp-route-id="@item.Slug">@item.Title</a></h4>
                                        <span>@item.PublishDate </span>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="widget_list widget_categories">
                            <div class="widget_title">
                                <h3>گروه مقالات</h3>
                            </div>
                            <ul>
                                @foreach (var item in Model.ArticleCategory)
                                {
                                    <li>
                                        <a asp-page="/ArticleCategory" asp-route-id="@item.Slug"
                                           class="@(Model.ArticleCategory.First() == item ? "active" : "")">@item.Name (@item.ArticlesCount)</a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="widget_list widget_tag">
                            <div class="widget_title">
                                <h3>کلمات کلیدی</h3>
                            </div>
                            <div class="tag_widget">
                                <ul>
                                    @foreach (var tag in Model.Article.KeywordList)
                                    {
                                        <li><a asp-page="/Search" asp-route-value="@tag">@tag</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>